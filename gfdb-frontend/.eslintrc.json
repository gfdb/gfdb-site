{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": 0,
    "linebreak-style": 0,
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-mixed-spaces-and-tabs": 0,
    "comma-dangle": 0,
    "no-unused-vars": 0,
    "react/prop-types": 0,
    "react/no-unescaped-entities": 0,
    "react/react-in-jsx-scope": 0,
    "no-prototype-builtins": 0 //TODO check this rule
  }
}
